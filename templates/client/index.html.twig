                            <h6 class="text-muted mb-2">Favoris</h6>
                            <h3 class="mb-0">3</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="fas fa-heart text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Dernières réservations #}
